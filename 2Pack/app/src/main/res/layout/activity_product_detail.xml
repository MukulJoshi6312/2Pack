<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".activity.ProductDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Detail"
        app:titleTextColor="@color/white" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detail_toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:gravity="center"
                android:padding="8dp"
                android:text="MYNTRA PAPER BAGS"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:scaleType="fitXY"
                android:src="@drawable/m_paper_bag"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView13" />


            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:padding="4dp"
                android:text="PRODUCT DESCRIPTION"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/product_image" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="TAMPER PROOF PRINTED PAPER BAG"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/description" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="FEATURES OF THE PRODUCT"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/tv1" />

            <TextView

                android:id="@+id/featuredText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="serif"
                android:gravity="left"
                android:padding="8dp"
                android:text="@string/feature_text"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv2" />


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="24dp"
                android:fillViewport="true"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/featuredText">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    tools:context=".MainActivity">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:elevation="8dp">

                        <TextView
                            android:id="@+id/editText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/teal_700"
                            android:fontFamily="serif"
                            android:hint="Enter the text"
                            android:padding="8dp"
                            android:textColorHint="@color/white"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/bagA"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:padding="8dp"
                            android:text="Myntra Paper Bag A"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/bagB"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:padding="8dp"
                            android:text="Myntra Paper Bag B"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/bagC"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:padding="8dp"
                            android:text="Myntra Paper Bag C"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/bagD"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:padding="8dp"
                            android:text="Myntra Paper Bag D"
                            android:textColor="@color/white" />

                        <Button
                            android:id="@+id/orderNow"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:text="Order Now" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:orientation="vertical"
                        android:elevation="8dp">

                        <TextView
                            android:id="@+id/Size"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/teal_700"
                            android:fontFamily="serif"
                            android:hint="Size"
                            android:padding="8dp"
                            android:textAlignment="center"
                            android:textColorHint="@color/white"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/size13"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:padding="8dp"
                            android:text="13 X 14"
                            android:textAlignment="center"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/size14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:padding="8dp"
                            android:text="14 X 16"
                            android:textAlignment="center"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/size21"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:padding="8dp"
                            android:text="21 X 17"
                            android:textAlignment="center"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/size23"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:padding="8dp"
                            android:text="23 X 19"
                            android:textAlignment="center"
                            android:textColor="@color/white" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:orientation="vertical"
                        android:elevation="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/teal_700"
                            android:fontFamily="serif"
                            android:hint="Qty/Pack"
                            android:padding="8dp"
                            android:textAlignment="center"
                            android:textColorHint="@color/white"
                            android:textSize="18sp" />


                        <Spinner
                            android:id="@+id/qty_per_pack1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:autofillHints="Select Size"
                            android:backgroundTint="@color/white"
                            android:elevation="8dp"
                            android:padding="8dp"
                            android:paddingLeft="10dp"
                            android:textAlignment="center" />

                        <Spinner
                            android:id="@+id/qty_per_pack2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="16dp"
                            android:autofillHints="Select Size"
                            android:backgroundTint="@color/white"
                            android:elevation="8dp"
                            android:padding="8dp"
                            android:paddingLeft="10dp"
                            android:textAlignment="center" />

                        <Spinner
                            android:id="@+id/qty_per_pack3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="16dp"
                            android:autofillHints="Select Size"
                            android:backgroundTint="@color/white"
                            android:elevation="8dp"
                            android:padding="8dp"
                            android:paddingLeft="10dp"
                            android:textAlignment="center" />

                        <Spinner
                            android:id="@+id/qty_per_pack4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="16dp"
                            android:autofillHints="Select Size"
                            android:backgroundTint="@color/white"
                            android:elevation="8dp"
                            android:padding="8dp"
                            android:paddingLeft="10dp"
                            android:textAlignment="center" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:orientation="vertical"
                        android:elevation="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/teal_700"
                            android:fontFamily="serif"
                            android:hint="Rate Per Pack"
                            android:padding="8dp"
                            android:textAlignment="center"
                            android:textColorHint="@color/white"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/rate5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="serif"
                            android:padding="8dp"
                            android:text="5000"
                            android:textAlignment="center"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/rate6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="serif"
                            android:padding="8dp"
                            android:text="6000"
                            android:textAlignment="center"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/rate11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="serif"
                            android:padding="8dp"
                            android:text="11000"
                            android:textAlignment="center"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/rate13"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="serif"
                            android:padding="8dp"
                            android:text="13000"
                            android:textAlignment="center"
                            android:textColor="@color/white" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:orientation="vertical"
                        android:elevation="8dp">

                        <TextView
                            android:id="@+id/Quantity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/teal_700"
                            android:fontFamily="serif"
                            android:hint="Quantity"
                            android:padding="8dp"
                            android:textAlignment="center"
                            android:textColorHint="@color/white"
                            android:textSize="18sp" />


                        <Spinner
                            android:id="@+id/qty1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:autofillHints="Select Size"
                            android:backgroundTint="@color/white"
                            android:elevation="8dp"
                            android:padding="8dp"
                            android:paddingLeft="10dp"
                            android:textAlignment="center" />

                        <EditText
                            android:id="@+id/qty2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:hint="0"
                            android:inputType="number"
                            android:padding="5dp"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white" />

                        <EditText
                            android:id="@+id/qty3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:hint="0"
                            android:inputType="number"
                            android:outlineSpotShadowColor="@color/white"
                            android:padding="5dp"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white" />

                        <EditText
                            android:id="@+id/qty4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:hint="0"
                            android:inputType="number"
                            android:padding="5dp"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:orientation="vertical"
                        android:elevation="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/teal_700"
                            android:fontFamily="serif"
                            android:hint="Total"
                            android:padding="8dp"
                            android:textAlignment="center"
                            android:textColorHint="@color/white"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/total1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="serif"
                            android:padding="8dp"
                            android:text="0"
                            android:textAlignment="textEnd"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/total2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="serif"
                            android:padding="8dp"
                            android:text="0"
                            android:textAlignment="textEnd"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/total3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="serif"
                            android:padding="8dp"
                            android:text="0"
                            android:textAlignment="textEnd"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/total4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:fontFamily="serif"
                            android:padding="8dp"
                            android:text="0"
                            android:textAlignment="textEnd"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                    </LinearLayout>


                </LinearLayout>
            </HorizontalScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>